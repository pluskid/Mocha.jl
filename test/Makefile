JULIA?=julia
julia_cmd := $(JULIA) --color=yes --check-bounds=yes
srun_cmd := srun --pty -p gpu --gres=gpu:1 --mem=8000

default:
	@echo "Target List"
	@echo "  test        - run local test"
	@echo "  test-ext    - run local test with native extension"
	@echo "  test-cuda   - run local test with CUDA backend"
	@echo "  test-opencl - run local test with OpenCL backend"
	@echo "  test-srun   - run test with GPU backends on server"

test:
	$(julia_cmd) runtests.jl

test-ext:
	bash -c "MOCHA_USE_NATIVE_EXT=true $(julia_cmd) runtests.jl"

test-cuda:
	bash -c "MOCHA_USE_CUDA=true $(julia_cmd) runtests.jl"

test-opencl:
	bash -c "MOCHA_USE_OPENCL=true $(julia_cmd) runtests.jl"

test-srun:
	$(srun_cmd) bash -c "MOCHA_USE_CUDA=true $(julia_cmd) runtests.jl"
	$(srun_cmd) bash -c "MOCHA_USE_OPENCL=true $(julia_cmd) runtests.jl"
